<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hackathon.workshop" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:rim="http://www.blackberry.com/ns/widgets">
    <feature name="Device" value="Device" />
    <feature name="Geolocation" value="Geolocation" />
    <rim:permissions>
        <rim:permit>read_device_identifying_information</rim:permit>
        <rim:permit>read_geolocation</rim:permit>
    </rim:permissions>
    <name>Hackathon</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="websecurity" value="disable" />
</widget>
